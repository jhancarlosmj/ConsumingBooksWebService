<?xml version="1.0" encoding="utf-8"?>

<com.jhancarlos.consumingbookswebservice.views.NavigationDrawerItemView
    android:id="@+id/itemRR"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/navigation_drawer_list_item_bg"
    android:orientation="vertical"
    android:padding="@dimen/default_small_padding">

    <ImageView
        android:id="@+id/navigationDrawerItemIconIV"
        android:layout_width="@dimen/navigation_drawer_image_view_size"
        android:layout_height="@dimen/navigation_drawer_image_view_size"
        android:layout_centerVertical="true"
        android:layout_marginLeft="0dp"
        android:contentDescription="@string/content_description"
        android:src="@drawable/ic_library_books"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/navigationDrawerItemTitleTV"
        style="@style/Wrap"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/navigationDrawerItemIconIV"
        android:text="@string/app_name"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_size_large"
        android:textStyle="normal"/>
</com.jhancarlos.consumingbookswebservice.views.NavigationDrawerItemView>
